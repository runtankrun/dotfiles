#! /bin/sh
sleep .5s; xfsettingsd &
sleep .5s; setxkbmap -option caps:swapescape &
sleep .5s; picom -b &
sleep .5s; sxhkd &
urxvtd -q &
xcape -e 'Super_L=Super_L|D' &
mpd &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
xdg-user-dirs-gtk-update &
skippy-xd --config ~/.config/skippy-xd/skippy-xd.rc --start-daemon &
easystroke &

bspc config focus_follows_pointer true

#mouse refresh rate (1000/100hz=10)
bspc config pointer_motion_interval 10

bspc monitor HDMI-1-2 -d C 
bspc monitor HDMI-0 -d 1 2 3 4 5 6 7 8

bspc config border_width         2
bspc config window_gap           0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a SimpleScreenRecorder state=floating
bspc rule -a MEGAsync state=floating
bspc rule -a Gcolor3 state=floating

. "${HOME}/.cache/wal/colors.sh"
bspc config normal_border_color "$color12"
bspc config active_border_color "$color0"
bspc config focused_border_color "$color2"
bspc config presel_feedback_color "$color2"

#bspc config normal_border_color "#887E80"
#bspc config active_border_color "#5E81AC"
#bspc config focused_border_color "#00E7FF"
#bspc config focused_border_color "#FF0000"
