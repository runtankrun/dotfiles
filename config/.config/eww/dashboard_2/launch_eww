#!/usr/bin/env sh

## Files and cmd
FILE="$HOME/.cache/eww_launch.xyz"
EWW="$HOME/.local/bin/eww -c $HOME/.config/eww/dashboard_2/"

## Run eww daemon if not running already
if [[ ! `pidof eww` ]]; then
	${EWW} daemon
	sleep 1
fi

# widgets not in use
# apps
# twitter
# volume
# fetch

## Open widgets 
run_eww() {
	${EWW} open-many \
           background \
           mail \
           notifications \
           configs \
           weather \
           power \
           fetch_lol \
           day_month \
           quote \
           cpu_radial \
           bat_radial \
           socials_2 \
           mem_radial \
           system \
           music \
           profile \
		   time
}

## Launch or close widgets accordingly
if [[ ! -f "$FILE" ]]; then
	touch "$FILE"
	run_eww
  bash $HOME/.config/eww/dashboard_2/scripts/quote update
else
	${EWW} close-all 
	rm "$FILE"
fi
