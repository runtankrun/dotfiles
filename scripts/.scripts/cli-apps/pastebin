#!/bin/bash

file=$(find $1 -type f | dmenu -i -l 20)
cat "$file" | curl -F 'f:1=<-' ix.io | xclip -selection c
notify-send "ðŸ˜€ pastebin for $file created."

url=$(echo "$(xclip -sel c -o)")
time=$(date '+%d-%m-%y-%H_%M_%S')
title="[$time] 	$url 	$file"
librewolf $url
echo "$title" >> "$HOME/.scripts/paste_hist.txt"
