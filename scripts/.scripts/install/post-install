#!/bin/sh

## Display Server ##
writeXServerConfig(){
    echo \ 
'#!/bin/sh
exec /usr/bin/Xorg -nolisten tcp "$@" vt$XDG_VTNR' 
}
sudo pacman -S xorg-xinit xorg-server
cp /etc/X11/xinit/xinitrc ~/.xinitrc
echo "exec bspwm" >> ~/.xinitrc
writeXServerConfig > ~/.xserverrc

## Basic ##
sudo pacman -S git vim python rxvt-unicode kitty feh ranger bspwm sxhkd picom mpd ncmpcpp 

## ZSH ##
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

## Yay ##
sudo pacman -S --needed base-devel git
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

## Yay Packages ##
yay -S autojump fd mcfly fasd rg sd pywal rofi dunst cava

