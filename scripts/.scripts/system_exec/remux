#!/bin/bash

tfn="$(date +%F_%T)"

if [[ $1 = "--trim" ]]; then
#inpoint=$(xclip -out -selection clipboard)
    echo input file:
    read input
    echo start time: 
    read st
    echo end time:
    read et

    ffmpeg -i $input -ss $st -to $et -c copy output_$tfn

    echo "ffmpeg \
        -i $input \
        -ss $st \
        -to $et \
        -c copy \
        output_$tfn"

elif [[ $1 = "--side-by-side" ]]; then    
    echo Video1:
    read vid1
    echo Video2:
    read vid2
    echo output:
    read output
    ffmpeg -i $vid1 -i $vid2 -filter_complex hstack -c:v libx264 -crf 20 "$file_timestamp.mp4"

else
    cat ${HOME}/.scripts/system_exec/remux | grep -o -e '"-.*"' | sd '"' '' 
fi
