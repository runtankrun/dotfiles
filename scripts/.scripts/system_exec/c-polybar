#/bin/sh

############
#   KILL   #
############
if [[ $1 = "-k" ]]; then
bspc config -m focused bottom_padding 0; \
bspc config -m focused top_padding 0; \
bspc config -m HDMI-0 window_gap 0;
pkill polybar\

##############
#   LAUNCH   #
##############

else
bspc config -m focused bottom_padding 0;
bspc config -m HDMI-0 window_gap 20; \
~/.config/polybar/colorblocks/launch.sh
fi
